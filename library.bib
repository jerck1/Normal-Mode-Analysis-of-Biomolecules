institution = {Laboratorio de Biofisica del Musculo, Instituto Venezolano de Investigaciones Cientificas, Caracas.},
journal = {J. Physiol.},
number = {1},
pages = {119--128},
title = {{Fluo-3 signals associated with potassium contractures in single amphibian muscle fibres.}},
volume = {481.1},
year = {1994}
}
