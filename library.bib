number = {June},
pages = {559--569},
title = {{THE TIME-COURSE OF Ca2+ EXCHANGE WITH CALMODULIN, TROPONIN, PARVALBUMIN, AND MYOSIN IN RESPONSE TO TRANSIENT INCREASES IN Ca2+}},
volume = {34},
year = {1981}
}
