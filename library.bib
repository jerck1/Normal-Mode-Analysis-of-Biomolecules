keywords = {Animals,Body Constitution,Body Constitution: genetics,Breeding,Butterflies,Butterflies: genetics,Butterflies: physiology,Color,Phenotype,Spectrophotometry,Ultraviolet Rays,Wing,Wing: physiology,Wing: radiation effects},
