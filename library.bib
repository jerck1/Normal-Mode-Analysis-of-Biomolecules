pages = {2736--2747},
title = {{AM-loading of fluorescent Ca2+ indicators into intact single fibers of frog muscle.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=1184470{\&}tool=pmcentrez{\&}rendertype=abstract},
